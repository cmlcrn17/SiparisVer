<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GirisSayfasi">

    <Button
        android:id="@+id/btn_yenisiparisekle"
        android:layout_width="0dp"
        android:layout_height="111dp"
        android:layout_marginEnd="26dp"
        android:text="Sipariş Ver"
        android:onClick="SiparisVer"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_siparislistesi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_siparislistesi"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_siparislistesi"
        android:layout_width="0dp"
        android:layout_height="113dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="33dp"
        android:text="Sipariş Listesi"
        android:onClick="SiparisListele"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_yenisiparisekle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
</android.support.constraint.ConstraintLayout>